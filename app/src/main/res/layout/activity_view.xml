<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile0" android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="120dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toTopOf="@+id/playerTextView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile1" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tile0" app:layout_constraintStart_toEndOf="@+id/tile0"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile2" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tile1" app:layout_constraintStart_toEndOf="@+id/tile1"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile3" android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/tile0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tile0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile4" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tile3" app:layout_constraintStart_toEndOf="@+id/tile3"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile5" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tile4" app:layout_constraintStart_toEndOf="@+id/tile4"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile6" android:minWidth="48dp" app:layout_constraintStart_toStartOf="@+id/tile3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tile3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile7" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tile6" app:layout_constraintStart_toEndOf="@+id/tile6"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile8" android:minWidth="48dp" app:layout_constraintStart_toEndOf="@+id/tile7"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/tile7"/>
    <TextView
            android:text="Current player: X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTextView" app:layout_constraintStart_toStartOf="@+id/tile6"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/tile8"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tile7" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp" android:textAlignment="center"/>
    <Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/playerTextView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="?attr/colorButtonNormal"
            android:textColor="#e6616161"/>
</android.support.constraint.ConstraintLayout>